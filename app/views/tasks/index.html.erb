<h1>My tasks</h1>

 <% @tasks.each do |task| %>
 
  <div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
  <label class="form-check-label" for="flexCheckDefault">
    <p><%= link_to task.title, show_path(task) %></p>
  </label>
</div>
 <% end %>


<%= link_to '<button type="button">Add a new task</button>'.html_safe, new_path %>